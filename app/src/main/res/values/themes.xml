<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.EaseIMDemo" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/em_base_color_primary</item>
        <item name="colorPrimaryDark">@color/em_base_color_primary_dark</item>
        <item name="colorAccent">@color/em_base_color_accent</item>
        <!-- Customize EditText text color -->
        <item name="android:editTextColor">@color/black</item>
        <!-- Customize text color hint -->
        <item name="android:textColorHint">@color/em_base_color_text_hint</item>
        <item name="android:windowBackground">@color/em_base_color_window_bg</item>
    </style>
</resources>